<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ver="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.choose_gold.jupengdome.MainActivity">
    <com.dalimao.corelibrary.VerificationCodeInput
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ver:box="4"
        ver:child_h_padding="5dp"
        android:layout_centerInParent="true"
        android:id="@+id/verificationCodeInput"
        ver:box_bg_normal="@drawable/verification_edit_bg_normal"
        ver:box_bg_focus="@drawable/verification_edit_bg_focus"
        ver:layout_constraintLeft_toLeftOf="parent"
        ver:layout_constraintTop_toTopOf="parent"
        ver:layout_constraintBottom_toBottomOf="parent"
        ver:layout_constraintRight_toRightOf="parent" />


    <Button
        android:onClick="click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>
